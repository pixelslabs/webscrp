pipeline {
    agent any

    stages {
         stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/pixelslabs/pyApp.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Run Containers') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
