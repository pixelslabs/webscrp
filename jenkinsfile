pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/pixelslabs/webscrp.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Run Containers') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
